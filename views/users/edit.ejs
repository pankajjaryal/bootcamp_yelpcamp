<% include ../includes/header %>

<div class="container">
    <div class="col-sm-7 col-sm-offset-2">
        <form class="form-horizontal" method="POST" action="/profile/<%= user.username %>?_method=PUT" enctype="multipart/form-data">
            <div class="form-group">
                <label class="col-sm-4 control-label"></label>
                <div class="col-sm-8">
                    
                    <% if(user.profileImage){ %>
                        <img class="img-responsive image-profile img-circle" src="/users/<%= user.profileImage %>" />
                    <% }else{ %>    
                        <img class="img-responsive image-profile img-circle" src="/INA.png" />
                    <% } %>
                    <label class="control-label">Edit Pic</label>
                    <input type="file" name="user[profileImage]" accept="image/*" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Email</label>
                <div class="col-sm-8">
                  <p class="form-control-static"><%= user.email %></p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Username</label>
                <div class="col-sm-8">
                  <p class="form-control-static"><%= user.username %></p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">First Name</label>
                <div class="col-sm-8">
                  <input type="text" name="user[firstName]" class="form-control" value="<%= user.firstName %>" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Last Name</label>
                <div class="col-sm-8">
                  <input type="text" name="user[lastName]" class="form-control" value="<%= user.lastName %>" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">City</label>
                <div class="col-sm-8">
                  <input type="text" name="user[city]" class="form-control" value="<%= user.city %>" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Country</label>
                <div class="col-sm-8">
                  <input type="text" name="user[country]" class="form-control" value="<%= user.country %>" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Bio/Hobbies</label>
                <div class="col-sm-8">
                  <input type="text" name="user[bio]" class="form-control" value="<%= user.bio %>" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Admin</label>
                <div class="col-sm-8">
                  <p class="form-control-static"><%= user.isAdmin %></p>
                </div>
            </div>
            <% if(currentUser && currentUser._id.equals(user._id)){ %>
                <div class="form-group">
                    <label class="col-sm-4 control-label"></label>
                    <div class="col-sm-8">
                      <input type="submit" class="btn btn-warning" value="Edit Profile" />
                    </div>
                </div>
            <% } %>
        </form>
          
    </div>
</div>

<% include ../includes/footer %>