<% include ../includes/header %>

<div class="container">
    <div class="col-sm-7 col-sm-offset-2">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-4 control-label"></label>
                <div class="col-sm-8">
                    
                    <% if(user.profileImage){ %>
                        <img class="img-responsive image-profile img-circle" src="/users/<%= user.profileImage %>" />
                    <% }else{ %>    
                        <img class="img-responsive image-profile img-circle" src="/INA.png" />
                    <% } %>
                    
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Email</label>
                <div class="col-sm-8">
                  <p class="form-control-static"><%= user.email %></p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Username</label>
                <div class="col-sm-8">
                  <p class="form-control-static"><%= user.username %></p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">First Name</label>
                <div class="col-sm-8">
                  <p class="form-control-static"><%= user.firstName %></p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Last Name</label>
                <div class="col-sm-8">
                  <p class="form-control-static"><%= user.lastName %></p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">City</label>
                <div class="col-sm-8">
                  <p class="form-control-static"><%= user.city %></p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Country</label>
                <div class="col-sm-8">
                  <p class="form-control-static"><%= user.country %></p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Bio/Hobbies</label>
                <div class="col-sm-8">
                  <p class="form-control-static"><%= user.bio %></p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Admin</label>
                <div class="col-sm-8">
                  <p class="form-control-static"><%= user.isAdmin %></p>
                </div>
            </div>
            <% if(currentUser && currentUser._id.equals(user._id)){ %>
                <div class="form-group">
                    <label class="col-sm-4 control-label"></label>
                    <div class="col-sm-8">
                      <a class="btn btn-warning" href="/profile/<%= user.username %>/edit">Edit Profile</a>
                    </div>
                </div>
            <% } %>
        </div>
          
    </div>
</div>

<% include ../includes/footer %>