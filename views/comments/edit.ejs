<% include ../includes/header %>

<div class="container">
    <header>
        <div class="jumbotron">
            <h2>YelpCamp</h2>
        </div>
    </header>
    
    <div class="col-md-6 col-md-offset-3">
        <h2>Edit comment</h2>
        <form name="editComment" method="POST" action="/campgrounds/<%= campgroundId %>/comments/<%= comment._id %>?_method=PUT">
            <div class="form-group">
                <input type="text" class="form-control" name="comment[text]" placeholder="text" value="<%= comment.text %>" required />
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-lg btn-primary" name="addCamp" value="Edit Comment" />
                <a href="/campgrounds/<%= campgroundId %>" class="btn btn-lg btn-default">Go Back</a>
            </div>
        </form>
    </div>


</div>

<% include ../includes/footer %>