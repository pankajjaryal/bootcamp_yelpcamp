<% include ../includes/header %>

<div class="container">
    <header>
        <div class="jumbotron">
            <h2>YelpCamp</h2>
        </div>
    </header>
    
    <div class="col-md-6 col-md-offset-3">
        <h2>Add a comment to <%= campground.name%></h2>
        <form name="addComment" method="POST" action="/campgrounds/<%= campground._id %>/comments">
            <div class="form-group">
                <input type="text" class="form-control" name="comment[text]" placeholder="text" required />
            </div>
            <!--<div class="form-group">-->
            <!--    <input type="text" class="form-control" name="comment[author]" placeholder="Author" />-->
            <!--</div>-->
            <div class="form-group">
                <input type="submit" class="btn btn-lg btn-primary" name="addCamp" value="Add Comment" />
                <a href="/campgrounds/<%= campground._id %>" class="btn btn-lg btn-default">Go Back</a>
            </div>
        </form>
    </div>


</div>

<% include ../includes/footer %>